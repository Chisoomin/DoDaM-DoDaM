<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp"
    android:background="#FFF4EC"
    tools:context=".UserGuide">

    <TextView
        android:id="@+id/componentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="도담도담 구성요소 설명서"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/componentStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="* 각 메뉴 구성요소의 자세한 설명은 그림을 클릭하세요"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/componentTitle" />

    <ImageView
        android:id="@+id/closeImage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/close" />

    <LinearLayout
        android:id="@+id/drawerComponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/borderline_3"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@+id/homeComponent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/componentStar">

        <ImageView
            android:id="@+id/componentImage"
            android:layout_width="154dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/menu" />

        <TextView
            android:id="@+id/componentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="메뉴"
            android:textColor="#353535"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/componentExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="왼쪽 상단에 위치한\n메뉴입니다."
            android:textColor="#353535"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/homeComponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/borderline_3"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/componentStar">

        <ImageView
            android:id="@+id/componentImage6"
            android:layout_width="154dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/home_btn" />

        <TextView
            android:id="@+id/componentText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="홈 화면"
            android:textColor="#353535"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/componentExp6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="가장 기본이 되는 \n화면입니다."
            android:textColor="#353535"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calComponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/borderline_3"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeComponent">

        <ImageView
            android:id="@+id/componentImage2"
            android:layout_width="154dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/calendar_btn" />

        <TextView
            android:id="@+id/componentText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="캘린더"
            android:textColor="#353535"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/componentExp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="하루동안 느꼈던 감정의\n일기를 쓸 수 있습니다."
            android:textColor="#353535"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/habitComponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/borderline_3"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/calComponent"
        app:layout_constraintTop_toBottomOf="@+id/drawerComponent">

        <ImageView
            android:id="@+id/componentImage3"
            android:layout_width="154dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/habit_btn" />

        <TextView
            android:id="@+id/componentText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="해빗 트래커"
            android:textColor="#353535"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/componentExp3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="습관을 정하고\n관리할 수 있습니다."
            android:textColor="#353535"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/statComponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/borderline_3"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@+id/forComponent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calComponent">

        <ImageView
            android:id="@+id/componentImage4"
            android:layout_width="154dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/statistics_btn" />

        <TextView
            android:id="@+id/componentText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="통계"
            android:textColor="#353535"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/componentExp4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="심리 검사, 일기 등\n다양한 콘텐츠에 관련된\n통계를 볼 수 있습니다."
            android:textColor="#353535"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/forComponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/borderline_3"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/calComponent"
        app:layout_constraintTop_toBottomOf="@+id/habitComponent">

        <ImageView
            android:id="@+id/componentImage5"
            android:layout_width="154dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/foryou_btn" />

        <TextView
            android:id="@+id/componentText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="마이 페이지"
            android:textColor="#353535"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/componentExp5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="나에게 추천하는\n맞춤 콘텐츠들이\n있습니다."
            android:textColor="#353535"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>